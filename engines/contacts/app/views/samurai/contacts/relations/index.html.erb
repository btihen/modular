<%= link_to 'New Relation', 
            samurai.new_relation_path, 
            class: 'pull-right bth btn-primary' %>

<h2>Relations</h2>

<div class='panel panel-primary'>
  <div class='panel-heading'>
    My Relations
  </div>

  <table class='table'>
    <thead>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Company</th>
      <th>Email</th>
      <th>Phone</th>
    </thead>
    <tbody>
    <% relations.each do |relation| %>
      <tr>
        <td><%= link_to "See #{relation.id}", [samurai, relation] %></td>
        <td><%= relation.first_name %></td>
        <td><%= relation.last_name %></td>
        <td><%= relation.contact %></td>
        <td><%= relation.email %></td>
        <td><%= relation.phone %></td>
        <td>
          <%= link_to 'Edit', samurai.edit_relation_path(relation), 
                      class: 'btn btn-primary' %>
          <%= link_to 'Delete',  [samurai, relation], 
                      class: 'btn btn-danger', method: :delete, 
                      data: {confirm: 'Are you sure?'} %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
